<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EFCoreSecurityXamarinDemo.DetailViewPages.DepartmentsDetailViewPage">
  <StackLayout Orientation="Vertical">
    <Label Text="Department"
           HorizontalOptions="Center"
           FontSize="Large" />
    <StackLayout Padding="0, 0, 0, 20" />
    <Label Text="Id"
           FontAttributes="Bold"
           FontSize="Medium" />
    <Label Text="{Binding Id}"
           TextColor="{Binding IdTextColor}"
           FontSize="Medium" />
    <StackLayout Padding="0, 0, 0, 15" />
    <Label Text="Title"
           FontAttributes="Bold"
           FontSize="Medium" />
    <Label Text="{Binding Title}"
           TextColor="{Binding TitleTextColor}"
           FontSize="Medium" />
    <StackLayout Padding="0, 0, 0, 15" />
    <Label Text="Office"
           FontAttributes="Bold"
           FontSize="Medium" />
    <Label Text="{Binding Office}"
           TextColor="{Binding OfficeTextColor}"
           FontSize="Medium" />
  </StackLayout>
</ContentPage>